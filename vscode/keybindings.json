[
  // Place your key bindings in this file to overwrite the defaults
  {
    // toggle focus editot/terminal
    "key": "ctrl+`",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus"
  },
  {
    "key": "shift+alt+t",
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus"
  },
  {
    "key": "alt+t",
    "command": "workbench.action.selectTheme",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+alt+m",
    "command": "editor.emmet.action.matchingPair"
  },
  {
    "key": "shift+cmd+d",
    "command": "editor.action.moveSelectionToNextFindMatch",
    "when": "editorFocus"
  },

  {
    // system language toggle
    "key": "ctrl+cmd+space",
    "command": "editor.action.triggerSuggest",
    "when":
      "editorHasCompletionItemProvider && editorTextFocus && !editorReadonly"
  },

  // spectacle conflicts
  {
    "key": "shift+alt+cmd+right",
    "command": ""
  },
  {
    "key": "shift+alt+cmd+left",
    "command": ""
  },

  {
    "key": "a",
    "when": "filesExplorerFocus",
    "command": "explorer.newFile"
  },
  {
    "key": "shift+a",
    "when": "filesExplorerFocus",
    "command": "explorer.newFolder"
  },
  {
    "key": "ctrl+shift+l",
    "command": "workbench.action.editor.changeLanguageMode"
  },
  {
    "key": "ctrl+shift+m",
    "command": "markdown.showPreviewToSide"
  },
  {
    "key": "ctrl+alt+cmd+l",
    "command": "workbench.action.reloadWindow"
  },
  {
    "key": "alt+cmd+i",
    "command": "workbench.action.toggleDevTools"
  },
  {
    "key": "shift+alt+s",
    "command": "workbench.action.openSnippets"
  },
  {
    "key": "alt+m",
    "command": "editor.action.jumpToBracket",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+alt+up",
    "command": "cursorColumnSelectUp",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+alt+down",
    "command": "cursorColumnSelectDown",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+shift+c",
    "command": "workbench.action.files.copyPathOfActiveFile"
  },
  {
    "key": "ctrl+b",
    "command": "workbench.action.showAllEditors"
  },
  {
    "key": "cmd+]",
    "command": "workbench.action.navigateForward"
  },
  {
    "key": "cmd+[",
    "command": "workbench.action.navigateBack"
  },
  {
    "key": "ctrl+shift+right",
    "command": "editor.action.smartSelect.grow",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+left",
    "command": "editor.action.smartSelect.shrink",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+cmd+right",
    "command": "-editor.action.smartSelect.grow",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+cmd+left",
    "command": "-editor.action.smartSelect.shrink",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+-",
    "command": "-workbench.action.navigateForward"
  },
  {
    "key": "ctrl+-",
    "command": "-workbench.action.navigateBack"
  },
  {
    "key": "cmd+k m",
    "command": "-workbench.action.editor.changeLanguageMode"
  },
  {
    "key": "shift+cmd+\\",
    "command": "-editor.action.jumpToBracket",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+h",
    "command": "workbench.action.replaceInFiles"
  },
  {
    "key": "shift+cmd+h",
    "command": "-workbench.action.replaceInFiles"
  },
  {
    "key": "alt+cmd+j",
    "command": "workbench.action.openGlobalKeybindings"
  },
  {
    "key": "cmd+k cmd+s",
    "command": "-workbench.action.openGlobalKeybindings"
  },
  {
    "key": "shift+alt+cmd+j",
    "command": "workbench.action.keybindingsReference"
  },
  {
    "key": "cmd+k cmd+r",
    "command": "-workbench.action.keybindingsReference"
  },
  {
    "key": "alt+cmd+b",
    "command": "editor.debug.action.toggleBreakpoint",
    "when": "editorTextFocus"
  },
  {
    "key": "f9",
    "command": "-editor.debug.action.toggleBreakpoint",
    "when": "editorTextFocus"
  },
  {
    "key": "shift+cmd+\\",
    "command": "workbench.action.splitEditor"
  },
  {
    "key": "cmd+\\",
    "command": "-workbench.action.splitEditor"
  },
  {
    "key": "cmd+\\",
    "command": "workbench.action.debug.start",
    "when": "!inDebugMode"
  },
  {
    "key": "f5",
    "command": "-workbench.action.debug.start",
    "when": "!inDebugMode"
  },
  {
    "key": "ctrl+shift+\\",
    "command": "workbench.action.debug.restart",
    "when": "inDebugMode"
  },
  {
    "key": "shift+cmd+f5",
    "command": "-workbench.action.debug.restart",
    "when": "inDebugMode"
  },
  {
    "key": "cmd+'",
    "command": "workbench.action.debug.stepOver",
    "when": "inDebugMode"
  },
  {
    "key": "f10",
    "command": "-workbench.action.debug.stepOver",
    "when": "inDebugMode"
  },
  {
    "key": "cmd+;",
    "command": "workbench.action.debug.stepInto",
    "when": "inDebugMode"
  },
  {
    "key": "f11",
    "command": "-workbench.action.debug.stepInto",
    "when": "inDebugMode"
  },
  {
    "key": "shift+cmd+;",
    "command": "workbench.action.debug.stepOut",
    "when": "inDebugMode"
  },
  {
    "key": "shift+f11",
    "command": "-workbench.action.debug.stepOut",
    "when": "inDebugMode"
  },
  {
    "key": "cmd+\\",
    "command": "workbench.action.debug.continue",
    "when": "inDebugMode"
  },
  {
    "key": "f5",
    "command": "-workbench.action.debug.continue",
    "when": "inDebugMode"
  },
  {
    "key": "ctrl+shift+h",
    "command": "editor.debug.action.showDebugHover",
    "when": "editorTextFocus && inDebugMode"
  },
  {
    "key": "cmd+k cmd+i",
    "command": "-editor.debug.action.showDebugHover",
    "when": "editorTextFocus && inDebugMode"
  },
  {
    "key": "ctrl+.",
    "command": "editor.action.previewDeclaration",
    "when":
      "editorHasDefinitionProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor"
  },
  {
    "key": "alt+f12",
    "command": "-editor.action.previewDeclaration",
    "when":
      "editorHasDefinitionProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor"
  },
  {
    "key": "ctrl+,",
    "command": "editor.action.openDeclarationToTheSide",
    "when":
      "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor"
  },
  {
    "key": "cmd+k f12",
    "command": "-editor.action.openDeclarationToTheSide",
    "when":
      "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor"
  }
]
